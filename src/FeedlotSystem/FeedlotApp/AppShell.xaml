<Shell
    x:Class="FeedlotApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FeedlotApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="FeedlotApp">

    <FlyoutItem Title="Dashboard" Route="DashboardPage">
        <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Animals" Route="AnimalFormPage">
        <ShellContent ContentTemplate="{DataTemplate views:AnimalFormPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Bookings" Route="BookingFormPage">
        <ShellContent ContentTemplate="{DataTemplate views:BookingFormPage}" />
    </FlyoutItem>
</Shell>
