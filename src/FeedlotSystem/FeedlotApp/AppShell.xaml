<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="FeedlotApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FeedlotApp.Views"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    FlyoutBehavior="Flyout"
    Shell.FlyoutIcon="menu.png"
    Shell.Title="FeedlotApp">

    <FlyoutItem Title="Dashboard" Icon="dashboard.png" Route="DashboardPage">
        <ShellContent ContentTemplate="{DataTemplate local:DashboardPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Animals" Icon="animal.png" Route="AnimalFormPage">
        <ShellContent ContentTemplate="{DataTemplate local:AnimalFormPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Bookings" Icon="booking.png" Route="BookingFormPage">
        <ShellContent ContentTemplate="{DataTemplate local:BookingFormPage}" />
    </FlyoutItem>
</Shell>
