<Shell
    x:Class="FeedlotApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FeedlotApp.Views"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    FlyoutBehavior="Flyout"
    Shell.FlyoutIcon="menu.png"
    Shell.Title="FeedlotApp">

    <FlyoutItem Title="Dashboard" Icon="dashboard.png" Route="DashboardPage">
        <ShellContent ContentTemplate="{DataTemplate local:DashboardPage}" />
    </FlyoutItem>

    <!-- Disabled visual only -->
    <FlyoutItem Title="Add Bookings" Icon="booking.png" Route="BookingFormPage">
        <ShellContent ContentTemplate="{DataTemplate local:BookingFormPage}" />
    </FlyoutItem>

    <FlyoutItem Title="All Bookings" Route="BookingListPage">
        <FlyoutItem.FlyoutIcon>
            <FontImageSource FontFamily="BootstrapIcons" Glyph="&#xf46c;" Color="Black" Size="22" />
        </FlyoutItem.FlyoutIcon>
        <ShellContent ContentTemplate="{DataTemplate local:BookingListPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Add Animals (Disabled)" Icon="animal_disabled.png">
        <ShellContent ContentTemplate="{DataTemplate local:ComingSoonPage}" />
    </FlyoutItem>


</Shell>
