<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FeedlotApp.Views.BookingListPage"
             Title="All Bookings"
             BackgroundColor="Black">

    <Grid Padding="10">
        <CollectionView x:Name="BookingCollectionView"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray"
                           CornerRadius="10"
                           Padding="10"
                           Margin="5"
                           BackgroundColor="#1e1e1e">
                        <StackLayout>

                            <!-- Booking Number Header -->
                            <Label Text="{Binding BookingNumber}"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   TextColor="White" />

                            <!-- White underline -->
                            <BoxView HeightRequest="1"
                                     Color="White"
                                     Margin="0,4,0,8"
                                     HorizontalOptions="Fill" />

                            <!-- Booking Details -->
                            <Label Text="{Binding VendorName}" TextColor="White" />
                            <Label Text="{Binding Property}" TextColor="White" />
                            <Label Text="{Binding BookingDate, StringFormat='Date: {0:dd MMM yyyy}'}" TextColor="White" />
                            <Label Text="{Binding TruckReg, StringFormat='Truck: {0}'}" TextColor="White" />
                            <Label Text="{Binding Status}" TextColor="White" />

                            <!-- Action Buttons -->
                            <StackLayout Orientation="Horizontal"
                                         HorizontalOptions="End"
                                         Spacing="10"
                                         Margin="0,10,0,0">
                                <Button Text="Edit"
                                        CommandParameter="{Binding Id}"
                                        Clicked="OnEditBookingClicked"
                                        BackgroundColor="#097969"
                                        TextColor="White"
                                        CornerRadius="12"
                                        Padding="5,2" />

                                <Button Text="Delete"
                                        CommandParameter="{Binding Id}"
                                        Clicked="OnDeleteBookingClicked"
                                        BackgroundColor="DarkRed"
                                        TextColor="White"
                                        CornerRadius="12"
                                        Padding="5,2" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
